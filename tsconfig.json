{
	"compilerOptions": {
		"target": "ESNext",
		"moduleResolution": "node",
		
		"strict": true, // I will regret this later
		"importsNotUsedAsValues": "error",
		"allowSyntheticDefaultImports": true,

		"outDir": "build/",
		"declaration": true,
	},

	"include": [ "src/**/*" ],
	"exclude": [ "node_modules/**/*" ],
}